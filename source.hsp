#define Burst_Delay 500//ms
#packopt name "citrs"
dialog "jpg|png",16,"JPG|PNG"
chdir getpath(refstr,32)
dirlist files,"*"+getpath(refstr,2)
notesel files
csv=""
	noteget file,i
	picload file
	
for i,0,notemax
	timer=0
	noteget file,i
	title strf("%s (%d of %d)",file,i+1,notemax)
	pos 0,0
	picload file,1
	repeat
		omousel=mousel
		omouser=mouser
		if(ginfo_act==0){
		getkey mousel,1
		getkey mouser,2
		}else{
			mousel=0
			mouser=0
		}
		if(mousel){
			if(omousel!=mousel){
				break
			}
			if(timer>Burst_Delay){
				break
			}
			timer+=1
		}
		if(mouser){
			if(omouser!=mouser){
				notesel csv
				notedel notemax-1
				noteunsel
				if(i>0){
					i--
				}
				noteget file,i
				title strf("%s (%d of %d)",file,i+1,notemax)
				pos 0,0
				picload file,1
			}
		}
		await 1
	loop
	csv+=strf("%d,%d\n",mousex,mousey)
next
notesel csv
repeat
dialog "csv",17,"CSVファイル"
if (stat){
	break
}
await
loop
notesave refstr
